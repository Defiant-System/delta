<MenuBar>
	<Menu name="X-wing">
		<Menu name="About X-wing" shell="win -a"/>
		<Menu type="divider"/>
		<Menu name="Quit X-wing" shell="win -c"/>
	</Menu>
	<Menu name="Game" for="game-content">
		<Menu name="Show View&#8230;">
			<Menu name="Start" click="show-view-start"/>
			<Menu name="Game" click="show-view-game"/>
			<Menu type="divider"/>
			<Menu name="Pause" click="show-view-pause"/>
			<Menu name="Game Over" click="show-view-game-over"/>
		</Menu>
		<Menu name="New Game" click="new-game"/>
		<Menu type="divider"/>
		<Menu name="Toggle Sound FX" click="toggle-sound-fx"/>
		<Menu name="Toggle Music" click="toggle-music"/>
		<Menu type="divider"/>
		<Menu name="Toggle Pause" click="toggle-pause"/>
	</Menu>
	<Menu name="Help">
		<Menu name="Help" click="open-help"/>
		<Menu type="divider"/>
		<Menu name="License" shell="win -al"/>
	</Menu>
</MenuBar>